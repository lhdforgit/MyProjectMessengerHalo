                android:bottomLeftRadius="@dimen/overlay_coner_size_large"
                android:bottomRightRadius="@dimen/overlay_coner_size"
                android:topLeftRadius="@dimen/overlay_coner_size_large"
                android:topRightRadius="@dimen/overlay_coner_size_large"
                />
