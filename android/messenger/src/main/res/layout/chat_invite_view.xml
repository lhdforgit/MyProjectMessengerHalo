<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_normal_s">

            <com.hahalolo.messager.chatkit.view.avatar.AvatarDetailGroupChat
                android:id="@+id/avatar_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/group_name_tv"
                style="@style/Messenger.Character.H4.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                tools:text="California Gym" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_name_tv"
                style="@style/Messenger.Character.H5.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_small_s"
                android:gravity="center"
                tools:text="Jenifer Le vừa tạo nhóm này" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/join_btn"
                style="@style/Messenger.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/halo_btn_height_small"
                android:layout_marginTop="@dimen/activity_normal"
                android:text="@string/chat_message_add_people" />
        </LinearLayout>

    </RelativeLayout>
</layout>