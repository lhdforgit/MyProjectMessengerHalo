<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="4dp"
        android:paddingEnd="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_content_tv"
                style="@style/Messenger.Character.H6.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.hahalolo.messager.chatkit.view.input.MentionTextView
                style="@style/Messenger.Character.H5.Dark"
                android:id="@+id/chat_quote_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_bt"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>
</layout>