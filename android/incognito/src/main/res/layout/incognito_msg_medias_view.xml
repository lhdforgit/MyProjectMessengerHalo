<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_2"
            android:id="@+id/image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#DDD"
            app:layout_constraintDimensionRatio="1:1"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/image_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_3"
            android:id="@+id/image_2"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#DDD"
            app:layout_constraintDimensionRatio="1:1"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/image_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/image_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="#DDD"
            android:layout_marginStart="8dp"
            app:layout_constraintDimensionRatio="1:1"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/count_tv"
            app:layout_constraintStart_toStartOf="@id/image_3"
            app:layout_constraintEnd_toEndOf="@id/image_3"
            app:layout_constraintTop_toTopOf="@id/image_3"
            app:layout_constraintBottom_toBottomOf="@id/image_3"
            android:layout_width="0dp"
            android:text="7"
            style="@style/Incognito.TextView.H1"
            android:gravity="center"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>