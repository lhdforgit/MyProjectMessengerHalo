<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/wrapper"
        style="@style/Incognito.Wrapper">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            style="@style/Incognito.AppBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Incognito.Toolbar.White.Nav"
                app:title="Hộp thư lưu trữ" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_invitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/invitation_tv"
                        style="@style/Incognito.TextView.H5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_incognito_box"
                        android:drawablePadding="@dimen/activity_normal_s"
                        android:padding="@dimen/activity_normal_s"
                        android:text="Lời mời" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Incognito.TextView.H7.Bold.Online"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_normal_s"
                        android:background="@drawable/ic_incognito_count_notify" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/btn_msg_wait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/message_waiting_tv"
                        style="@style/Incognito.TextView.H5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_incognito_message_waiting_two"
                        android:drawablePadding="@dimen/activity_normal_s"
                        android:padding="@dimen/activity_normal_s"
                        android:text="Tin nhắn chờ" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Incognito.TextView.H7.Bold.Online"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_normal_s"
                        android:background="@drawable/ic_incognito_count_notify" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/activity_normal_s"
                    android:layout_marginEnd="@dimen/activity_normal_s"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/btn_msg_spam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/message_spam_tv"
                        style="@style/Incognito.TextView.H5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_incognito_message_spam"
                        android:drawablePadding="@dimen/activity_normal_s"
                        android:padding="@dimen/activity_normal_s"
                        android:text="Tin nhắn chờ" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Incognito.TextView.H7.Bold.Online"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99+"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_normal_s"
                        android:background="@drawable/ic_incognito_count_notify" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/btn_msg_tick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/message_tick_tv"
                        style="@style/Incognito.TextView.H5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_incognito_message_tick"
                        android:drawablePadding="@dimen/activity_normal_s"
                        android:padding="@dimen/activity_normal_s"
                        android:text="Tin nhắn đã đánh dấu" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>