<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="Status"
            type="Boolean" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_normal_s">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_tv"
                style="@style/Incognito.TextView.H5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Tên hiển thị" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status_tv"
                style="@style/Incognito.TextView.H6"
                android:drawableStart="@drawable/ic_incognito_public"
                android:drawablePadding="@dimen/activity_small_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công khai"
                android:layout_gravity="center" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_normal_s"
            android:layout_marginStart="@dimen/activity_normal_s"
            android:layout_marginTop="@dimen/activity_small_s"
            android:layout_marginEnd="@dimen/activity_normal_s"
            android:background="@drawable/bg_incognito_border_common_all"
            android:hint="Luôn Vui Tươi"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_normal_s"
            android:background="@color/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/save_btn"
            style="@style/Incognito.TextView.H5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_normal_s"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="#1767FD"
            android:textSize="@dimen/activity_normal_plus" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel_btn"
            style="@style/Incognito.TextView.H6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hủy"
            android:layout_margin="@dimen/activity_normal_s"
            android:textSize="@dimen/activity_normal_plus"/>
    </LinearLayout>

</layout>