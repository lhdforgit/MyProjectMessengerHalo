<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Pressed state -->
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="@integer/halo_btn_anim_duration_ms"
                android:propertyName="translationZ"
                android:valueTo="@dimen/halo_btn_pressed_z"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/halo_btn_elevation"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Hover state. This is triggered via mouse. -->
    <item
        android:state_enabled="true"
        android:state_hovered="true">
        <set>
            <objectAnimator
                android:duration="@integer/halo_btn_anim_duration_ms"
                android:propertyName="translationZ"
                android:valueTo="@dimen/halo_btn_hovered_z"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/halo_btn_elevation"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Focused state. This is triggered via keyboard. -->
    <item
        android:state_enabled="true"
        android:state_focused="true">
        <set>
            <objectAnimator
                android:duration="@integer/halo_btn_anim_duration_ms"
                android:propertyName="translationZ"
                android:valueTo="@dimen/halo_btn_focused_z"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/halo_btn_elevation"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Base state (enabled, not pressed) -->
    <item android:state_enabled="true">
        <set>
            <objectAnimator
                android:duration="@integer/halo_btn_anim_duration_ms"
                android:propertyName="translationZ"
                android:startDelay="@integer/halo_btn_anim_delay_ms"
                android:valueTo="@dimen/halo_btn_z"
                android:valueType="floatType"
                tools:ignore="UnusedAttribute" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/halo_btn_elevation"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Disabled state -->
    <item>
        <set>
            <objectAnimator
                android:duration="0"
                android:propertyName="translationZ"
                android:valueTo="0dp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="0dp"
                android:valueType="floatType" />
        </set>
    </item>

</selector>