<resources xmlns:ns1="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/apk/res-auto">
    <style name="Hahalolo"/>

    <!--Messenger Style-->

    <style name="Messenger">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- START Messenger Header -->

    <style name="Messenger.Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_background</item>
        <!-- Cancel focus edit text when create layout -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Messenger.Love">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_background</item>
        <!-- Cancel focus edit text when create layout -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="Messenger.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Messenger.AppBar.NoElevation">
        <item name="elevation">0dp</item>
    </style>

    <style name="Messenger.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/messenger_action_bar</item>
        <item name="android:background">@color/app_background</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Messenger.Toolbar.White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text_dark</item>
    </style>

    <style name="Messenger.Toolbar.White.Nav">
        <item name="navigationIcon">@drawable/ic_back_navigation</item>
    </style>

    <style name="Messenger.Toolbar.Small">
        <item name="android:layout_height">@dimen/messenger_action_bar_small</item>
    </style>

    <style name="Messenger.ToolBarTitle" parent="Messenger.Character.H3">
        <item name="android:textColor">@color/text_dark</item>

    </style>

    <!-- END Messenger Header -->

    <!-- START Messenger TabLayout -->

    <style name="Messenger.TabTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor" tools:ignore="PrivateResource">@color/tabs_text_color</item>
        <item name="android:fontFamily">@font/muli</item>
