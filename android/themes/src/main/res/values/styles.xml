        <item name="fontWeight">500</item>
    </style>

    <style name="Messenger.TabLayoutText" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabIconTint">@color/tabs_icon_color_selector_colored</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@color/tabs_ribs_ripple_color</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabMinWidth">100dp</item>
        <item name="tabTextAppearance">@style/Messenger.TabTextAppearance</item>
        <item name="android:elevation">@dimen/elevation_tab</item>
    </style>

    <!-- END Messenger TabLayout -->

